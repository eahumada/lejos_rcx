<?xml version="1.0" encoding="UTF-8"?>
<plugin
   id="lejos"
   name="Lejos Plug-in"
   version="1.0.2"
   provider-name="Ponsard Christophe"
   class="lejos.LejosPlugin">


   <runtime>
      <library name="lejos.jar"/>
   </runtime>

   <requires>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.jdt.ui"/>
      <import plugin="org.eclipse.jdt.core"/>
      <import plugin="org.eclipse.jdt.launching"/>
   </requires>


   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            name="leJOS Project"
            icon="icons/rcx.gif"
            category="org.eclipse.jdt.ui.java"
            class="lejos.LejosWizard"
            project="true"
            id="lejos.wizard">
         <description>
            Create a Lejos project
         </description>
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            name="leJOS"
            class="lejos.LejosPreference"
            id="lejos.pref">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.editorActions">
      <editorContribution
            targetID="org.eclipse.jdt.ui.CompilationUnitEditor"
            id="lejos.editorContribution">
         <menu
               label="leJOS"
               path="additions"
               id="lejosMenu">
            <separator
                  name="lejosGroup">
            </separator>
         </menu>
         <action
               label="&amp;Preference"
               class="lejos.actions.PreferenceAction"
               menubarPath="lejosMenu/lejosGroup"
               id="lejos.actions.PreferenceAction">
         </action>
         <action
               label="&amp;Firmware Download"
               class="lejos.actions.FirmwareAction"
               menubarPath="lejosMenu/lejosGroup"
               id="lejos.actions.FirmwareAction">
         </action>
         <action
               label="&amp;Bytecode Download"
               class="lejos.actions.DownloadAction"
               menubarPath="lejosMenu/lejosGroup"
               id="lejos.actions.DownloadAction">
         </action>
      </editorContribution>
   </extension>

</plugin>
